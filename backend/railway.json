{
  "build": {
    "builder": "nixpacks",
    "options": {
      "features": {
        "python": "3.12"
      }
    }
  },
  "deploy": {
    "startCommand": "uvicorn main:app:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
