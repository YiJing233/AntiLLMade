{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python", "3.12"]
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "./start.sh",
    "healthcheckPath": "/health"
  },
  "variables": {
    "RAILWAY_VOLUME_MOUNT_PATH": "/data"
  }
}
